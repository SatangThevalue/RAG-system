# =================
# LangFlow + Postgres
# =================
POSTGRES_USER=langflow
POSTGRES_PASSWORD=changeme
POSTGRES_DB=langflow_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# SQLAlchemy URL สำหรับ LangFlow
LANGFLOW_DATABASE_URL=postgresql+psycopg://langflow:changeme@postgres:5432/langflow_db
LANGFLOW_SECRET_KEY=please_change_me
LANGFLOW_SUPERUSER=admin@example.com
LANGFLOW_SUPERUSER_PASSWORD=strongpassword

# =================
# Redis Memory (แชท)
# =================
USE_REDIS=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL_SECONDS=604800

# =================
# Chroma
# =================
CHROMA_HOST=chroma
CHROMA_PORT=8000
CHROMA_COLLECTION=rag_docs

# =================
# Hugging Face
# =================
HF_TOKEN=
HF_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
HF_GENERATOR_MODEL=google/flan-t5-base

# Retrieval
TOP_K=4
CHUNK_SIZE=800
CHUNK_OVERLAP=120

# App
APP_LOG_LEVEL=INFO

# =================
# (ตัวเลือก) บันทึกแชทลง Postgres
# =================
CHATLOG_POSTGRES_URL=postgresql+psycopg://langflow:changeme@postgres:5432/rag_chat
ENABLE_CHATLOG_POSTGRES=false
